<Window x:Class="Presentation.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Manage Customers" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,10,0,0" Click="ManageCustomers_Click"/>
        <Button Content="Manage Products" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="170,10,0,0" Click="ManageProducts_Click"/>
        <Button Content="Create Orders" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,50,0,0" Click="CreateOrders_Click"/>
        <Button Content="Generate Reports" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="170,50,0,0" Click="GenerateReports_Click"/>
    </Grid>
</Window>
