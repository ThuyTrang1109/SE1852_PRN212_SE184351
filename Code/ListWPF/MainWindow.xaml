<Window x:Class="ListWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListWPF"
        mc:Ignorable="d"
        Title="Thao tác trên List" Height="360" Width="282">
    <Grid>
        <TextBox x:Name="txtGiaTri"
                 HorizontalAlignment="Left" Height="23"
                 Margin="17,10,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="98"></TextBox>
        <Button x:Name="btnThem" Content="Thêm vào List"
                HorizontalAlignment="Left" Margin="127,13,0,0"
                VerticalAlignment="Top" Width="115"
                RenderTransformOrigin="0.341,0.611"
                Click="BtnThem_Click"></Button>
        <ListBox x:Name="lstDuLieu" SelectionMode="Multiple"
                 HorizontalAlignment="Left" Height="275"
                 Margin="15,38,0,0" VerticalAlignment="Top"
                 Width="100"></ListBox>
        <Button x:Name="btnSapXepTang"
                Content="sắp xếp tăng" HorizontalAlignment="Left"
                Margin="127,143,0,0" VerticalAlignment="Top"
                Width="115" Click="BtnSapXepTang_Click"></Button>
        <Button x:Name="btnSapXepGiam"
                Content="sắp xếp giảm" HorizontalAlignment="Left"
                Margin="127,180,0,0" VerticalAlignment="Top"
                Width="115" Click="BtnSapXepGiam_Click"></Button>
        <Button x:Name="btnXoa1PhanTu"
                Content="Xóa 1 phần tử" HorizontalAlignment="Left"
                Margin="127,220,0,0" VerticalAlignment="Top"
                Width="115" Click="BtnXoa1PhanTu_Click"></Button>
        <Button x:Name="btnXoaNhieuPhanTu"
                Content="Xóa nhiều phần tử" HorizontalAlignment="Left"
                Margin="127,256,0,0" VerticalAlignment="Top"
                Width="115" Click="BtnXoaNhieuPhanTu_Click"></Button>
        <Button x:Name="btnXoaToanBoPhanTu"
                Content="Xóa toàn bộ phần tử" HorizontalAlignment="Left"
                Margin="127,293,0,0" VerticalAlignment="Top"
                Width="115" Click="BtnXoaToanBoPhanTu_Click"></Button>
        <Label Content="Giá trị:" HorizontalAlignment="Left"
               Margin="127,45,0,0" VerticalAlignment="Top"></Label>
        <TextBox x:Name="txtGiatriChen"
                 HorizontalAlignment="Left" Height="23"
                 Margin="176,48,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="66"></TextBox>
        <Label Content="Vị trí:" HorizontalAlignment="Left"
               Margin="127,73,0,0" VerticalAlignment="Top"></Label>

        <TextBox x:Name="txtViTriChen"
                 HorizontalAlignment="Left" Height="23"
                 Margin="176,76,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="66"
                 RenderTransformOrigin="0.48,1.71"></TextBox>
        <Button x:Name="btnChen" Content="Chèn"
                HorizontalAlignment="Left" Margin="176,111,0,0"
                VerticalAlignment="Top" Width="66"
                Click="BtnChen_Click"></Button>
    </Grid>
</Window>
